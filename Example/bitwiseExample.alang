// 位运算示例
let a = 13;      // 1101
let b = 6;       // 0110
println("a & b =", a & b);      // 0100 -> 4
println("a | b =", a | b);      // 1111 -> 15
println("a ^ b =", a ^ b);      // 1011 -> 11
println("~a =", ~a);            // 按 64 位取反 -> -14 (实现方式)
println("a << 2 =", a << 2);    // 110100 -> 52
println("a >> 1 =", a >> 1);    // 110 -> 6

// 结合逻辑与位运算优先级测试
println("a & b == 4:", (a & b) == 4);
println("(a | b) == 15:", (a | b) == 15); // 使用括号确保按位或先执行

